    ///function to display all made orders
    int display_orders()
    {
        order_item *tmp = head;
        if(tmp == NULL)
        {
            cout<<"No orders to display. please place an order"<<endl;
            return 0;
        }
        while(tmp != NULL)
        {
            print_order(tmp);
            tmp = tmp->next_item;
        }
        return 1;


    }
